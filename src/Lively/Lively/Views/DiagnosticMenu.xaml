<Window
    x:Class="Lively.Views.DiagnosticMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="clr-namespace:Lively.Extensions"
    xmlns:local="clr-namespace:Lively.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:Lively.Properties"
    Title="Lively Diagnostics"
    Height="200"
    ResizeMode="NoResize"
    SizeToContent="Width"
    Style="{DynamicResource WindowUI}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="5">
        <StackPanel VerticalAlignment="Center">
            <Button
                MinWidth="200"
                MinHeight="35"
                Margin="0,0,0,5"
                Click="Generate_Report_Click"
                Content="{ext:LocalizedString ExportLogs_Description}" />
            <Button
                MinWidth="200"
                MinHeight="35"
                Margin="0,0,0,5"
                Click="Open_Debug_View_Click"
                Content="{ext:LocalizedString Debug_Description}" />
            <Button
                MinWidth="200"
                MinHeight="35"
                Click="Get_Help_Click"
                Content="{ext:LocalizedString ReportBug_Description}" />
        </StackPanel>
    </Grid>
</Window>
